{{> /partials/header-single}}

<article class="mostly-words">

	<div class="row post-header">
			
		<div class="col-lg-12">
			<div class="right">
			
			{{> /partials/image-captioned}}
			
			</div>
			
			<div class="left">
			
				<h1>{{{post.post_title}}}</h1>
				<h2>{{#get_field}}sub-title{{/get_field}}</h2>
			
				<p class="excerpt">
				{{{post.post_excerpt}}}
				</p>
			
				<author>
				<a href="{{author.url}}">{{author.display_name}}</a>
				</author>
			
				<date>{{date}}</date>
				
				<div class="paragraph first-paragraphs">
					
					{{#has_video}} {{{video}}} {{/has_video}}
					
					{{^has_video}}
						{{#iterate}}
							{{{paragraphs.#}}}
						{{/iterate}}
						
						<br><br>
						
						{{#iterate}}
							{{{paragraphs.#}}}
						{{/iterate}}
					{{/has_video}}
					
				</div>
			</div>					
		</div>
	</div>	
	
	<div class="row post-content">
		
		<div class="col-md-8 paragraph">
			
			{{#iterate}}
				{{{paragraphs.#}}}
			{{/iterate}}
			
			{{> /partials/image-captioned}}
			
			{{#iterate}}
				{{{paragraphs.#}}}
			{{/iterate}}
			
			{{#iterate}}
				<br><br>
				{{{paragraphs.#}}}
			{{/iterate}}
			
			{{> /partials/image-captioned}}
			
			{{#spill}}
				{{{paragraphs}}}
			{{/spill}}			
		</div>
		
		<div class="col-md-4">
			
			{{#issue.brand}}
				{{> /partials/robin-hood}}
			{{/issue.brand}}
			
			{{^issue.brand}}
				{{> /partials/ad-single}}
			{{/issue.brand}}
			
			{{> /partials/quote-tweet}}

			{{#issued}}
				{{> /partials/magazine-relation}}
			{{/issued}}
			
		</div>
	</div>
				
	{{#spill}}
	<div class="row post-content spill-quotes">
		<div class="col-md-8">
			<div class="quote">
				
				{{quotes}}
				<span class="tweet">
					<i class='fa fa-twitter'></i>
				</span>
			</div>
		</div>
	</div>
	{{/spill}}
		
	<div class="row post-content">
		<div class="col-md-12">
			<div class='row'>
			{{#spill}}
			
				<div class="image col-md-6">
					<img src="{{images.url}}" title="{{images.post_title}}" />
					
					<span class="caption">
						{{images.post_content}}
					</span>
				</div>
			
			{{/spill}}
			</div>
		</div>
		<div class="col-md-12 social-row">
			<div class='social-share'>
				<i>Share this beauty</i>
				<div class="addthis_custom_sharing"></div>
			</div>
		</div>
	</div>
</article>

